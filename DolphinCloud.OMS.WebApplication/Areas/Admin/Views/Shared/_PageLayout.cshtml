@functions {
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layuiAdmin 控制台主页一</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!--样式引用 Start-->
    @*开发环境引用样式*@
    <environment names="Development">
        <link href="~/lib/layuiadmin/layui/css/layui.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/layuiadmin/adminui/dist/css/admin.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    @*测试、生产环境引用样式*@
    <environment names="Staging,Production">
        <link href="~/lib/layuiadmin/layui/css/layui.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/layuiadmin/adminui/dist/css/admin.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <!-- 自定义样式、行内样式 Start -->
    @if (IsSectionDefined("Styles"))
    {
        @await RenderSectionAsync("Styles", required: false)
    }
    <!-- 自定义样式、行内样式 End -->
    <!--样式引用 End-->
    <!--脚本引用 Start-->
    <environment names="Development">
        <script src="~/lib/layuiadmin/layui/layui.js" asp-append-version="true"></script>
    </environment>
    @*测试、生产环境引用JavaScript脚本*@
    <environment names="Staging,Production">
        <script src="~/lib/layuiadmin/layui/layui.js" asp-append-version="true"></script>
    </environment>
    @await RenderSectionAsync("Scripts", required: false)
    <!--脚本引用 End-->
</head>
<body>
    @RenderBody()
    <mini-profiler position="@RenderPosition.BottomRight" max-traces="5" color-scheme="ColorScheme.Auto" nonce="45" />
</body>
</html>